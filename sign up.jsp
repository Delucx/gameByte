      <form class="signup" action="home.html" method="POST">
        <div class="content">
            <img src="Assets/full logo.png" alt="gameByte logo" />
            <div class="form">
                <!-- Step 1 -->
                <div class="form-page" id="step-1">
                    <div class="inputBox">
                        <input type="text" id="firstName" name="firstName" required />
                        <i>First Name</i>
                        <p class="error" id="firstNameError" hidden></p>
                    </div>
                    <div class="inputBox">
